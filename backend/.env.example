# vectorAIz Backend Configuration
# ================================
# Copy to .env and adjust for your environment.
# All vars are prefixed with VECTORAIZ_ automatically by Pydantic.

# ── Security (REQUIRED for production) ──────────────────────────
# Authentication — validates API keys against ai.market
# Set to false ONLY for local development without ai.market connection.
VECTORAIZ_AUTH_ENABLED=true

# Encryption key for API keys at rest. Generate with:
#   python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# WARNING: If not set, an ephemeral key is generated — encrypted data lost on restart.
VECTORAIZ_SECRET_KEY=

# Debug mode — MUST be false in production (leaks stack traces)
VECTORAIZ_DEBUG=false

# ── ai.market Integration ───────────────────────────────────────
# URL of the ai.market backend for auth validation and listing push
VECTORAIZ_AI_MARKET_URL=https://ai-market-backend-production.up.railway.app

# Service-to-service API key for internal endpoints (optional)
VECTORAIZ_INTERNAL_API_KEY=

# ── Storage ─────────────────────────────────────────────────────
# Directories for uploads and processed data (Docker volumes recommended)
VECTORAIZ_DATA_DIRECTORY=/data
VECTORAIZ_UPLOAD_DIRECTORY=/data/uploads
VECTORAIZ_PROCESSED_DIRECTORY=/data/processed

# ── DuckDB ──────────────────────────────────────────────────────
VECTORAIZ_DUCKDB_MEMORY_LIMIT=12GB
VECTORAIZ_DUCKDB_THREADS=8

# ── Qdrant (Vector DB for semantic search) ──────────────────────
# If using docker-compose, "qdrant" resolves to the Qdrant container.
VECTORAIZ_QDRANT_HOST=qdrant
VECTORAIZ_QDRANT_PORT=6333

# ── LLM (Bring Your Own Key) ───────────────────────────────────
# Provider: "gemini" or "openai"
VECTORAIZ_LLM_PROVIDER=gemini
VECTORAIZ_LLM_MODEL=gemini-1.5-flash
VECTORAIZ_GEMINI_API_KEY=
VECTORAIZ_OPENAI_API_KEY=

# ── Upload Limits ───────────────────────────────────────────────
# Max upload size in bytes (default: 100GB)
VECTORAIZ_MAX_UPLOAD_SIZE_BYTES=107374182400
